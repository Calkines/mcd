{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"calkines/mcd",
            "hostname":"client",
            "essential": false            
        },
        {
            "name":"client",
            "image":"calkines/multi-server",
            "hostname":"api",
            "essential": false  
        },
        {
            "name":"worker",
            "image":"calkines/multi-worker",
            "hostname":"worker",
            "essential": false 
        },
        {
            "name":"nginx",
            "image":"calkines/multi-nginx",
            "hostname":"nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client","server"]
        }
    ]
}